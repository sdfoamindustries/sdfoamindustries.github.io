    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: url('assets/background.jpg') no-repeat center center fixed;
      background-size: cover;
      color: #333;
      scroll-behavior: smooth;
    }
    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background: rgba(255,255,255,0.6);
      z-index: -1;
    }
    a { text-decoration: none; color: inherit; }
    img { display: block; max-width: 100%; }

    /* Header + Navigation */
    header {
      background: rgba(0,64,128,0.9);
      padding: 10px 20px;
      position: sticky;
      top: 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      z-index: 1000;
    }
    .logo-title {
      display: flex;
      align-items: center;
    }
    .logo-title img {
      height: 60px;
      width: auto;
    }
    .logo-title span {
      font-size: 24px;
      font-weight: bold;
      color: #fff;
      margin-left: 12px;
    }
    nav a {
      margin: 0 12px;
      font-size: 16px;
      font-weight: 600;
      color: #fff;
    }
    nav a:hover { text-decoration: underline; }

    /* Main Content Wrapper */
    main {
      max-width: 1000px;
      margin: 30px auto;
      padding: 20px;
      background: rgba(255,255,255,0.95);
      border-radius: 8px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.1);
    }
    section {
      margin-bottom: 60px;
    }
    h1, h2 {
      color: #004080;
      text-align: center;
      margin-bottom: 16px;
    }

    /* Gallery */
    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 12px;
    }

    /* PDF Button */
    .pdf-link {
      display: inline-block;
      margin: 20px auto;
      padding: 12px 20px;
      background: #008000;
      color: #fff;
      font-weight: bold;
      border-radius: 6px;
      text-align: center;
    }
    .pdf-link:hover { background: #005900; }

    /* Contact Info */
    .contact-info {
      font-size: 16px;
      line-height: 1.6;
      max-width: 600px;
      margin: auto;
    }
    .contact-info a { color: #004080; }
    .contact-info a:hover { text-decoration: underline; }

    /* WhatsApp Button */
    .whatsapp-button {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 60px;
      height: 60px;
      background: #25D366;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.3);
      cursor: pointer;
    }
    .whatsapp-button img { width: 35px; }
  </style>
</head>
